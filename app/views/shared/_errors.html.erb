<% if object.errors.any? %>
  <div class="my-6 p-6 bg-yellow-100 border border-red-500 rounded-md shadow-md" role="alert">
    <h2 class="text-xl font-semibold text-red-700">
      Oops! Your form could not be saved.
    </h2>
    <h3 class="mt-2 text-base font-semibold text-red-700">
      Please correct the following
    </h3>
    <ul class="mt-3 list-disc list-inside text-sm text-red-700">
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
