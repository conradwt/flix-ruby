<h1 class="text-3xl font-bold my-8 text-center text-gray-900"><%= pluralize(@users.size, "User") %></h1>
<ul class="list-none p-0 max-w-lg mx-auto">
  <% @users.each do |user| %>
    <li class="py-4 border-b border-gray-200 last:border-b-0">
      <div class="flex justify-between items-center">
        <%= link_to user.name, user, class: "text-xl text-blue-600 hover:text-blue-800 hover:underline font-semibold" %>
        <span class="text-sm text-gray-600">
          Joined <%= time_ago_in_words(user.created_at) %> ago
        </span>
      </div>
    </li>
  <% end %>
</ul>
