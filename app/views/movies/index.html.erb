<div class="divide-y divide-dotted divide-gray-300">
  <% @movies.each do |movie| %>
    <section class="flex flex-col md:flex-row py-6">
      <div class="image md:w-1/4 text-center shrink-0">
        <%= main_image(movie, class: "w-24 shadow-md mx-auto md:mx-0") %>
      </div>
      <div class="summary md:w-3/4 md:pl-6 mt-4 md:mt-0">
        <div class="flex justify-between items-start">
          <div>
            <h2 class="text-2xl mb-1">
              <%= link_to movie.title, movie, class: "text-gray-900 hover:text-blue-600 font-semibold" %>
            </h2>
            <h3 class="text-lg text-gray-500 font-normal">
              <%= total_gross(movie) %>
            </h3>
          </div>
          <div class="stars text-orange-500 text-lg shrink-0 ml-4">
            <%= average_stars(movie) %>
          </div>
        </div>
        <p class="mt-4 text-gray-900">
          <%= truncate(movie.description, length: 150, separator: ' ') %>
        </p>
      </div>
    </section>
  <% end %>
</div>

<% if current_user_admin? %>
  <section class="admin text-center my-12 py-8 border-t border-dashed border-gray-300">
    <%= link_to "Add New Movie", new_movie_path, class: "inline-block bg-gray-800 text-white text-base font-medium py-2 px-4 rounded-md tracking-wider uppercase hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50" %>
  </section>
<% end %>
